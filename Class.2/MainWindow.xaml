        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.ColumnSpan="4"
                 Margin="5" 
                 Background="#FFF5F5E2"
                 FontSize="25"
                 TextAlignment="Right"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>


        <Button Content="C/CE" Grid.Column="0" 
                Grid.Row="1" Margin="5"
                Background="Orange" 
                Foreground="White"
                Template="{StaticResource roundbutton}"
                />

        <Button Content="OFF" Grid.Row="1"
                Grid.Column="1" Margin="5"
                Background="Black"
                Foreground="White"
                Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="SQRT" Grid.Row="1"
            Grid.Column="2" Margin="5"
            Background="Black"
            Foreground="White"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="%" Grid.Row="1"
                 Grid.Column="3" Margin="5"
                 Background="Black"
                 Foreground="White"
                Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="MRC" Grid.Row="2"
                  Grid.Column="0" Margin="5"
                  Background="Black"
                  Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="M-" Grid.Row="2"
              Grid.Column="1" Margin="5"
              Background="Black"
              Foreground="White"
              Template="{StaticResource roundbutton}"/>
        <Button Content="M+" Grid.Row="2"
           Grid.Column="2" Margin="5"
           Background="Black"
           Foreground="White"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="/" Grid.Row="2"
           Grid.Column="3" Margin="5"
           Background="Black"
           Foreground="White"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"/>

        <Button Content="7" Grid.Row="3"
           Grid.Column="0" Margin="5"
           Background="Black"
           Foreground="White"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="8" Grid.Row="3"
       Grid.Column="1" Margin="5"
       Background="Black"
        Foreground="White"
        Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="9" Grid.Row="3"
    Grid.Column="2" Margin="5"
    Background="Black"
    Foreground="White"
    Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="X" Grid.Row="3"
    Grid.Column="3" Margin="5"
    Background="Black"
    Foreground="White"
    Style="{StaticResource MaterialDesignRaisedAccentButton}"/>

        <Button Content="4" Grid.Row="4"
           Grid.Column="0" Margin="5"
           Background="Black"
           Foreground="White"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="5" Grid.Row="4"
       Grid.Column="1" Margin="5"
       Background="Black"
       Foreground="White"
       Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="6" Grid.Row="4"
    Grid.Column="2" Margin="5"
    Background="Black"
    Foreground="White"
    Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="-" Grid.Row="4"
    Grid.Column="3" Margin="5"
    Background="Black"
    Foreground="White"
    Style="{StaticResource MaterialDesignRaisedAccentButton}"/>

        <Button Content="1" Grid.Row="5"
          Grid.Column="0" Margin="5"
          Background="Black"
          Foreground="White"
          Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="2" Grid.Row="5"
      Grid.Column="1" Margin="5"
      Background="Black"
      Foreground="White"
      Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="3" Grid.Row="5"
   Grid.Column="2" Margin="5"
   Background="Black"
   Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="+" Grid.Row="5"
   Grid.Column="3" Margin="5" Grid.RowSpan="2"
   Background="Black"
   Foreground="White"
   Style="{StaticResource MaterialDesignRaisedAccentButton}"
                />



        <Button Content="0" Grid.Row="6"
          Grid.Column="0" Margin="5"
          Background="Black"
          Foreground="White"
          Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="." Grid.Row="6"
      Grid.Column="1" Margin="5"
      Background="Black"
      Foreground="White"
      Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
        <Button Content="=" Grid.Row="6"
   Grid.Column="2" Margin="5"
   Background="Black"
   Foreground="White"
   Style="{StaticResource MaterialDesignRaisedAccentButton}"/>
    </Grid>
</Window>
